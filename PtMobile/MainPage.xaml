<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="PtMobile.MainPage"
    BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="20">

            <!-- A: Profile Picture -->
            <Frame WidthRequest="110"
                   HeightRequest="110"
                   CornerRadius="55"
                   Padding="5"
                   BorderColor="#F4A940"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center">
                <Image Source="vincent.jpg"
                       Aspect="AspectFill">
                    <Image.Clip>
                        <EllipseGeometry Center="55,55" RadiusX="55" RadiusY="55"/>
                    </Image.Clip>
                </Image>
            </Frame>

            <!-- Name Title -->
            <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                <Label Text="Vincent van Gogh"
                       TextColor="White"
                       FontSize="24"
                       FontAttributes="Bold"/>

                <Label Text="Dutch, 1853 — 1890"
                       TextColor="#cccccc"
                       FontSize="14"/>
            </VerticalStackLayout>

            <!-- B: Read More section -->
            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="Was a Dutch Post-Impressionist painter who is among the most famous and influential..."
                           TextColor="White"
                           FontSize="14"
                           MaxLines="2"
                           LineBreakMode="TailTruncation"/>
                </toolkit:Expander.Header>

                <toolkit:Expander.Content>
                    <Label Text="Full description here... You can put more detailed biography or information about the artist."
                           TextColor="White"
                           FontSize="14"/>
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <!-- C: Stats Grid -->
            <Grid ColumnSpacing="10">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 1 -->
                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                    <Label Text="$7.5m" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="Record" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

                <!-- 2 -->
                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Label Text="$3.5m" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="Average" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

                <!-- 3 -->
                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                    <Label Text="+598%" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="General" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

                <!-- 4 -->
                <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
                    <Label Text="12" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="Items" TextColor="#AAAAAA" FontSize="12"/>
                </VerticalStackLayout>

            </Grid>

            <!-- Section Title -->
            <Label Text="Other Van Gogh Works"
                   TextColor="White"
                   FontSize="18"
                   Margin="0,10,0,5"/>

            <!-- D: Artwork Grid -->
            <Grid ColumnSpacing="10" RowSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 1 -->
                <Frame Grid.Column="0"
                       Grid.Row="0"
                       BackgroundColor="#222222"
                       CornerRadius="10"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="5">
                        <Image Source="art1.jpg" Aspect="AspectFill" HeightRequest="140"/>
                        <Label Text="Peach Tree in Blossom" TextColor="White"/>
                        <Label Text="$950,000" TextColor="#bbbbbb" FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- 2 -->
                <Frame Grid.Column="1"
                       Grid.Row="0"
                       BackgroundColor="#222222"
                       CornerRadius="10"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="5">
                        <Image Source="art2.jpg" Aspect="AspectFill" HeightRequest="140"/>
                        <Label Text="Cafe Terrace at Night" TextColor="White"/>
                        <Label Text="$1,920,000" TextColor="#bbbbbb" FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- 3 -->
                <Frame Grid.Column="0"
                       Grid.Row="1"
                       BackgroundColor="#222222"
                       CornerRadius="10"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="5">
                        <Image Source="art3.jpg" Aspect="AspectFill" HeightRequest="140"/>
                        <Label Text="Some Other Work" TextColor="White"/>
                        <Label Text="$800,000" TextColor="#bbbbbb" FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- 4 -->
                <Frame Grid.Column="1"
                       Grid.Row="1"
                       BackgroundColor="#222222"
                       CornerRadius="10"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="5">
                        <Image Source="art4.jpg" Aspect="AspectFill" HeightRequest="140"/>
                        <Label Text="Another Painting" TextColor="White"/>
                        <Label Text="$1,300,000" TextColor="#bbbbbb" FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
